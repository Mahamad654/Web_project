<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="Customer_NameTextField">Customer Name</label>
                    <input type="text" class="form-control" id="Customer_NameTextField"
                    placeholder="Enter the Customer Name" name="Customer_Name" value="<%= Survey.Customer_Name %>" required>
                </div>

                <div class="form-group">
                    <label for="Product_NameTextField">Product Name</label>
                    <input type="text" class="form-control" id="Product_NameTextField"
                    placeholder="Enter the Product Name" name="Product_Name" value="<%= Survey.Product_Name %>"required>
                </div>

                <div class="form-group">
                    <label for="Purchase_DateTextField">Purchase Date</label>
                    <input type="date" class="form-control" id="Purchase_DateTextField"
                    placeholder="Enter the Purchase Date" name="Purchase_Date" value="<%= Survey.Purchase_Date %>" required>
                </div>

                <div class="form-group">
                    <label for="DescriptionTextField">Description</label>
                    <input type="text" class="form-control" id="DescriptionTextField"
                    placeholder="Enter your Description" name="Description" value="<%= Survey.Description %>" required>
                </div>

                <div class="form-group">
                    <label for="Product_PriceTextField">Product Price</label>
                    <input type="number" class="form-control" id="Product_PriceTextField"
                    placeholder="Enter your Product Price" name="Product_Price" value="<%= Survey.Product_Price %>"required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>
                    Submit</button>

                <a href="/surveyslist" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel</a>

            </form>
        </div>
    </div>
</div>

<%- include ../Partials/footer.ejs %>